	<sub-flow name="sfdc-sapi-query-salesforce-flow" doc:id="1ad13386-e84d-422b-b3ac-f8f2adc800a0" >
		<logger level="INFO" doc:name="LOG INFO Start of Flow" doc:id="ff8e8711-ef9d-4ea1-ab74-4d3f41197716" message="Start of query salesforce flow"/>
		<ee:transform doc:name="DW get query from request" doc:id="ed266718-8a24-46c8-bd71-b9534a7d4951" >
			<ee:message >
			</ee:message>
			<ee:variables >
				<ee:set-variable resource="dataweave/vSfQuery.dwl" variableName="vSfQuery" />
			</ee:variables>
		</ee:transform>
		<salesforce:query doc:name="Query Salesforce" doc:id="e51a5c2c-68fb-4d75-a393-aa009c08d1b8" config-ref="salesforce-config">
			<salesforce:salesforce-query >#[vars.vSfQuery]</salesforce:salesforce-query>
		</salesforce:query>
		<ee:transform doc:name="DW convert response into Json" doc:id="d06e6851-96a6-4ed7-8280-1fe2bb02eab5">
			<ee:message>
				<ee:set-payload><![CDATA[%dw 2.0
